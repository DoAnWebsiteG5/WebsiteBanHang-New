@{
}


@model Checkout

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="text-center mb-4">
                <h2 class="display-4">Cảm ơn bạn đã đặt hàng!</h2>
            </div>
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Thông tin đơn hàng:</h3>
                    <ul class="list-group list-group-flush">
                        @foreach (var line in Model?.Lines ?? Enumerable.Empty<CheckoutLine>())
                        {
                            <div class="d-flex justify-content-between">
                                <p>@line.Product.ProductName</p>
                                <p>@line.Quantity</p>
                                <p>@(line.Product.ProductPrice * (1 - line.Product.ProductDiscount)) VNĐ</p>
                            </div>
                        }
                        <hr class="mt-0">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Tạm tính</h6>
                            <h6 class="font-weight-medium">@Model?.ComputeTotalValue() VNĐ</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Phí vận chuyển</h6>
                            <h6 class="font-weight-medium">@(Model?.ComputeTotalValue() * 3 / 1000) VNĐ</h6>
                        </div>
                    </ul>
                    <div class="mt-3">
                        <p class="font-weight-bold">Tổng cộng: @(Model?.ComputeTotalValue() + (Model?.ComputeTotalValue() * 3 / 1000)) VNĐ</p>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <p>Xin cảm ơn bạn đã mua hàng tại cửa hàng chúng tôi!</p>
            </div>
        </div>
    </div>
</div>
